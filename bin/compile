#!/bin/bash

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

# Install .NET SDK

apt-get update && apt-get install -y dotnet-sdk-9.0


# Install .NET Runtime v7.0
apt-get update && apt-get install -y aspnetcore-runtime-9.0



# Build app
echo "Building app..."
dotnet build -c Release && echo "Successfully built app !"

